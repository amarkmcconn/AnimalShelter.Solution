@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Edit</h2>

<h4>Edit this Animal: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AnimalId)

    @Html.LabelFor(model => model.Type)
    @Html.EditorFor(model => model.Type)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)
    @Html.LabelFor(model => model.DateOfA)
    @Html.TextBoxFor(model => model.DateOfA)
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Animal", "Index")</p>